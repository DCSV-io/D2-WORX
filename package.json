{
  "name": "d2-worx",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.15.0"
  },
  "scripts": {
    "build": "pnpm run format && pnpm run lint && pnpm -r run build",
    "clean": "pnpm -r run clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,js,mjs,cjs,json,svelte,html,css,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,js,mjs,cjs,json,svelte,html,css,md,yaml,yml}\""
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@vitest/coverage-v8": "3.1.1",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-svelte": "3.14.0",
    "globals": "16.4.0",
    "prettier": "3.8.1",
    "prettier-plugin-svelte": "3.4.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0",
    "vitest": "3.1.1"
  }
}
